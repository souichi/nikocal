<!DOCTYPE html>
<html>
<head>
  <title>ニコニコカレンダー</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <link rel='icon' href='<%= image_path('1.gif') %>'>
  <link rel="apple-touch-icon" href='<%= image_path('1.gif') %>' />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= yield :head_end %>
</head>
<body>
  <nav class='navbar navbar-default' role='navigation'>
    <div class='container'>
      <div class='navbar-header'>
        <button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar'>
          <span class='sr-only'>Toggle navigation</span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
        </button>
        <a class='navbar-brand' href='/'>
          <i>ニコニコカレンダー</i>
        </a>
      </div>
      <div class='collapse navbar-collapse' id='navbar'>
        <ul class='nav navbar-nav navbar-right'>
          <% if current_user %>
            <li><a href='<%= home_monthly_path %>'>月間</a></li>
            <li><a href='<%= summaries_path %>'>グラフ</a></li>
          <% end %>
          <li><a href='<%= home_help_path %>'>ヘルプ</a></li>
          <% if current_user %>
            <li><a href='<%= edit_user_registration_path %>'><%= current_user.name %></a></li>
          <% else %>
            <li><a href='<%= new_user_session_path  %>'>ログイン</a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class='container'>
    <%= yield %>
  </div>

  <%= yield :body_end %>
</body>
</html>
